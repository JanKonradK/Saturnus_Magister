# Environment
ENVIRONMENT=docker

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/email_manager
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=email_manager

# OpenAI-compatible API
OPENAI_API_KEY=sk-your-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo

# TickTick OAuth
TICKTICK_ACCESS_TOKEN=
TICKTICK_CLIENT_ID=
TICKTICK_CLIENT_SECRET=

# TickTick Project IDs (get from saturnus-setup)
TICKTICK_Q1_PROJECT=
TICKTICK_Q2_PROJECT=
TICKTICK_Q3_PROJECT=
TICKTICK_Q4_PROJECT=
TICKTICK_WORK_PROJECT=

# Processing
POLL_INTERVAL_SECONDS=300
MAX_CONCURRENT_EMAILS=8

# Matching
AUTO_MATCH_THRESHOLD=0.85
REVIEW_THRESHOLD=0.50

# Future: Auto-reply
ENABLE_AUTO_REPLY=false
AUTO_REPLY_CONFIDENCE_THRESHOLD=0.95

